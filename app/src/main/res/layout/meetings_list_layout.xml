<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:id="@+id/list_meeting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="meeting" />

    <TextView
        android:id="@+id/list_meeting_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_height="wrap_content"
        tools:text="12-00" />

    <TextView
        android:id="@+id/list_meeting_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/list_meeting_start_time"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_height="wrap_content"
        tools:text="high" />


    <TextView
        android:id="@+id/list_meeting_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_meeting_name"
        android:gravity="center_vertical|fill_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="desc" />






</RelativeLayout>